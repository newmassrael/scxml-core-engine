<?xml version="1.0"?>
<!-- we test that eventexpr uses the current value of var1, not its initial value  -->

<scxml initial="s0" datamodel="ecmascript"  version="1.0" xmlns="http://www.w3.org/2005/07/scxml">
<datamodel>
  <data id="Var1" expr="'event1'"/>
  </datamodel>
  
<state id="s0">
  <onentry>
   <assign location="Var1" expr="'event2'"/>
   <send eventexpr="Var1"/>
    </onentry>
    
  <transition event="event2"  target="pass"/>
  <transition event="*" target="fail"/>
 </state>

   
   <final id="pass"/>
   <final id="fail"/>

</scxml>