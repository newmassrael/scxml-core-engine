<?xml version="1.0"?>

<!--  testing that in case of early binding variables are assigned values at init time, before
 the state containing them is visited  -->
<scxml initial="s0" version="1.0" xmlns="http://www.w3.org/2005/07/scxml" datamodel="ecmascript">
   
     
 <state id="s0">
   <transition cond="Var1 == 1" target="pass"/>

  <transition  target="fail"/>

   </state>
   
<state id="s1">
  <datamodel>
    <data id="Var1" expr="1"/>
    </datamodel>
  </state>
   
   <final id="pass"/>
   <final id="fail"/>
     
</scxml>