<?xml version="1.0"?>
<!-- we test that <send> stores the value of the sendid in idlocation.  If it does,
var1 has a value and we pass.  Otherwise we fail  -->

<scxml initial="s0" datamodel="ecmascript"  version="1.0" xmlns="http://www.w3.org/2005/07/scxml">
<datamodel>
  <data id="Var1"/>

  </datamodel>
  
<state id="s0">
  <onentry>
   <send event="event1" idlocation="Var1"/>
    </onentry>
    
  <transition cond="typeof Var1 !== 'undefined'" target="pass"/>
  <transition target="fail"/>
 </state>

     
   <final id="pass"/>
   <final id="fail"/>

</scxml>