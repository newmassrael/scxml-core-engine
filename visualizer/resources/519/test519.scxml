<!-- test that that <param> values get encoded as POST parameters.  . -->

<scxml initial="s0" datamodel="ecmascript"  version="1.0" xmlns="http://www.w3.org/2005/07/scxml">

   
<state id="s0">
  <onentry>
    <send event="timeout" delay="30s"/>
    <send  event="test" target="http://localhost:8080/test" type="http://www.w3.org/TR/scxml/#BasicHTTPEventProcessor">
      <param name="param1" expr="1"/>
       </send>  
     </onentry>
     
     <!-- if other end sends us back this event, we succeed -->
  <transition event="test" expr="_event.data[&quot;param1&quot;] == 1"  target="pass"/>
  <transition event="*" target="fail"/>
 </state>
  
   <final id="pass"/>
   <final id="fail"/>
</scxml>