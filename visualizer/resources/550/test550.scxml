<?xml version="1.0"?>

<!-- test that expr can be used to assign a value to a var.  This test uses early binding -->

<scxml initial="s0" version="1.0" datamodel="ecmascript" binding="early" xmlns="http://www.w3.org/2005/07/scxml">
    
   <state id="s0">
 
       <transition cond="Var1 == 2" target="pass"/>
       <transition  target="fail"/>
   </state>
   
   <state id="s1">
   	<datamodel>
    <data id="Var1" expr="2"/>
    </datamodel>
    </state>

   <final id="pass"/>
   <final id="fail"/>
   


</scxml>