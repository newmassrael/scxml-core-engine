<?xml version="1.0"?>
<!-- test that if the evaluation of <invoke>'s args causes an error, the 
invocation is cancelled.  In this test, that means that we don't get done.invoke 
before the timer goes off.  -->


<scxml initial="s0" version="1.0" datamodel="ecmascript"  xmlns="http://www.w3.org/2005/07/scxml">

     
<state id="s0">
  <onentry>
    <send event="timer" delay="1s"/>
    </onentry>
    
  <!-- reference an invalid namelist -->
   <invoke type="http://www.w3.org/TR/scxml/" namelist="__undefined_variable_for_error__">
      <content>
       <scxml initial="subFinal" version="1.0" datamodel="ecmascript"  xmlns="http://www.w3.org/2005/07/scxml">
             <final id="subFinal"/>
            </scxml>
            </content>
            </invoke>
     <transition event="timer" target="pass"/>
     <transition event="done.invoke" target="fail"/>
   </state>   
     
<final id="pass"/>
<final id="fail"/>
</scxml>